# Stirling PDF Configuration
# Copy this file to .env and update the values

# Domain
STIRLING_DOMAIN=pdf.example.com

# UI Settings
APP_NAME=Stirling PDF
APP_NAME_NAVBAR=Stirling PDF
HOME_DESCRIPTION=Your self-hosted PDF tool

# Authentication (optional)
# Set to true for user login requirement
DOCKER_ENABLE_SECURITY=false
SECURITY_ENABLE_LOGIN=false
ADMIN_USERNAME=admin
ADMIN_PASSWORD=

# System settings
DEFAULT_LOCALE=en-US
GOOGLE_VISIBILITY=false
SHOW_UPDATE=false

# Timezone
TZ=Europe/Istanbul
