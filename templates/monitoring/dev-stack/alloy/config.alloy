// ==============================================
// GRAFANA ALLOY CONFIGURATION
// Log collection for Docker, Traefik, and System
// ==============================================

// Loki endpoint
loki.write "default" {
  endpoint {
    url = "http://loki:3100/loki/api/v1/push"
  }
}

// ==============================================
// DOCKER CONTAINER LOGS
// ==============================================
discovery.docker "containers" {
  host = "unix:///var/run/docker.sock"
}

discovery.relabel "containers" {
  targets = discovery.docker.containers.targets

  rule {
    source_labels = ["__meta_docker_container_name"]
    regex         = "/(.*)"
    target_label  = "container"
  }

  rule {
    source_labels = ["__meta_docker_container_id"]
    target_label  = "container_id"
  }
}

loki.source.docker "containers" {
  host       = "unix:///var/run/docker.sock"
  targets    = discovery.relabel.containers.output
  labels     = { job = "containerlogs" }
  forward_to = [loki.write.default.receiver]
}

// ==============================================
// TRAEFIK ACCESS LOGS
// ==============================================
local.file_match "traefik_access" {
  path_targets = [{
    __path__ = "/traefik-logs/access.log",
    job      = "traefik",
    type     = "access",
  }]
}

loki.source.file "traefik_access" {
  targets    = local.file_match.traefik_access.targets
  forward_to = [loki.process.traefik_access.receiver]
}

loki.process "traefik_access" {
  stage.json {
    expressions = {
      ClientHost       = "ClientHost",
      RequestMethod    = "RequestMethod",
      RequestPath      = "RequestPath",
      DownstreamStatus = "DownstreamStatus",
      Duration         = "Duration",
      RouterName       = "RouterName",
    }
  }

  stage.labels {
    values = {
      method = "RequestMethod",
      status = "DownstreamStatus",
      router = "RouterName",
    }
  }

  forward_to = [loki.write.default.receiver]
}

// ==============================================
// TRAEFIK ERROR LOGS
// ==============================================
local.file_match "traefik_error" {
  path_targets = [{
    __path__ = "/traefik-logs/traefik.log",
    job      = "traefik",
    type     = "error",
  }]
}

loki.source.file "traefik_error" {
  targets    = local.file_match.traefik_error.targets
  forward_to = [loki.write.default.receiver]
}

// ==============================================
// SYSTEM LOGS
// ==============================================
local.file_match "syslog" {
  path_targets = [{
    __path__ = "/var/log/syslog",
    job      = "syslog",
  }]
}

loki.source.file "syslog" {
  targets    = local.file_match.syslog.targets
  forward_to = [loki.write.default.receiver]
}

// ==============================================
// AUTH LOGS (SSH attempts)
// ==============================================
local.file_match "authlog" {
  path_targets = [{
    __path__ = "/var/log/auth.log",
    job      = "authlog",
  }]
}

loki.source.file "authlog" {
  targets    = local.file_match.authlog.targets
  forward_to = [loki.write.default.receiver]
}
