# Authelia Configuration
# Copy this file to .env and update the values

# Domain where Authelia will be accessible
AUTHELIA_DOMAIN=auth.example.com

# Timezone
TZ=Europe/Istanbul

# Secrets (CHANGE THESE - generate with: openssl rand -hex 32)
AUTHELIA_JWT_SECRET=changeme_jwt_secret_minimum_32_chars
AUTHELIA_SESSION_SECRET=changeme_session_secret_min_32_chars
AUTHELIA_STORAGE_ENCRYPTION_KEY=changeme_encryption_key_32_chars

# SMTP for password reset emails (optional)
# AUTHELIA_SMTP_PASSWORD=your_smtp_password
