# Vaultwarden Configuration
# Copy this file to .env and update the values

# Domain (with https://)
VAULTWARDEN_DOMAIN=https://vault.example.com
VAULTWARDEN_HOST=vault.example.com

# Admin panel token (generate with: openssl rand -base64 48)
# Access admin panel at: https://vault.example.com/admin
ADMIN_TOKEN=

# Registration settings
SIGNUPS_ALLOWED=false
SIGNUPS_VERIFY=true
INVITATIONS_ALLOWED=true

# Features
SENDS_ALLOWED=true
EMERGENCY_ACCESS_ALLOWED=true
PASSWORD_HINTS_ALLOWED=false

# Logging
LOG_LEVEL=info
EXTENDED_LOGGING=true

# Timezone
TZ=Europe/Istanbul

# SMTP Configuration (optional - for email verification)
# SMTP_HOST=smtp.example.com
# SMTP_FROM=vault@example.com
# SMTP_PORT=587
# SMTP_SECURITY=starttls
# SMTP_USERNAME=vault@example.com
# SMTP_PASSWORD=your_password
