# Open WebUI Configuration

# Ollama connection (must be on same network)
OLLAMA_BASE_URL=http://ollama:11434

# Secret key for session encryption (generate with: openssl rand -hex 32)
WEBUI_SECRET_KEY=

# Authentication settings
WEBUI_AUTH=true
ENABLE_SIGNUP=false
DEFAULT_USER_ROLE=user

# API providers
ENABLE_OLLAMA_API=true
ENABLE_OPENAI_API=false

# OpenAI (optional - for hybrid local/cloud setup)
OPENAI_API_KEY=
OPENAI_API_BASE_URL=

# Traefik domain
WEBUI_DOMAIN=chat.example.com
