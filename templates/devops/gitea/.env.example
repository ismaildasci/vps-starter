# Gitea Configuration
# Copy this file to .env and update the values

# Domain
GITEA_DOMAIN=git.example.com
GITEA_ROOT_URL=https://git.example.com

# Database
DB_TYPE=postgres
DB_HOST=gitea-postgres:5432
DB_NAME=gitea
DB_USER=gitea
DB_PASSWORD=changeme_secure_password

# SSH Port (for git clone via SSH)
SSH_PORT=2222

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=changeme_secret_key
INTERNAL_TOKEN=changeme_internal_token

# Registration
DISABLE_REGISTRATION=false
REQUIRE_SIGNIN_VIEW=false
INSTALL_LOCK=false

# Features
ACTIONS_ENABLED=true
PACKAGES_ENABLED=true

# SMTP (optional)
# MAILER_ENABLED=true
# SMTP_ADDR=smtp.example.com
# SMTP_PORT=587
# SMTP_FROM=gitea@example.com
# SMTP_USER=gitea@example.com
# SMTP_PASSWORD=your_password

# Actions Runner (if using runner profile)
# RUNNER_TOKEN=your_registration_token
# RUNNER_NAME=docker-runner
